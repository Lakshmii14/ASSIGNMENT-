// Declare a variable x with an initial value
let x = 10;

console.log("Initial value of x:", x); // Outputs: 10

// Post-increment: x is incremented after its value is used
let postIncrement = x++;
console.log("After post-increment (x++):", postIncrement); // Outputs: 10
console.log("Value of x now:", x); // Outputs: 11

// Pre-increment: x is incremented before its value is used
let preIncrement = ++x;
console.log("After pre-increment (++x):", preIncrement); // Outputs: 12
console.log("Value of x now:", x); // Outputs: 12

// Post-decrement: x is decremented after its value is used
let postDecrement = x--;
console.log("After post-decrement (x--):", postDecrement); // Outputs: 12
console.log("Value of x now:", x); // Outputs: 11

// Pre-decrement: x is decremented before its value is used
let preDecrement = --x;
console.log("After pre-decrement (--x):", preDecrement); // Outputs: 10
console.log("Value of x now:", x); // Outputs: 10
